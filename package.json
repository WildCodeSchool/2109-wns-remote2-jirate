{
  "name": "jirate",
  "version": "1.0.0",
  "main": "server.ts",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/index.js",
    "build": "tsc -p tsconfig.prod.json",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest unit",
    "test:integration": "dotenv -e ./.env.test yarn generate:reset && dotenv -e ./.env.test jest int -i",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint --fix .",
    "generate": "graphql-codegen --config codegen.yml",
    "db:migration": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset --force",
    "db:seed": "npx prisma db seed",
    "prisma:studio": "npx prisma studio",
    "cypress:open": "cypress open",
    "test:environment:docker": "yarn docker:up && yarn docker:test:run & yarn docker:down",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker compose down",
    "docker:test:run": "docker exec server ./bin/wait-for-it.sh db:5432 -- yarn test"
  },
  "license": "MIT",
  "dependencies": {
    "@graphql-codegen/core": "^2.3.0",
    "@graphql-codegen/plugin-helpers": "^2.3.1",
    "@graphql-codegen/schema-ast": "^2.4.0",
    "@graphql-tools/schema": "^8.3.1",
    "@prisma/client": "^3.5.0",
    "@types/faker": "^5.5.9",
    "apollo-graphql": "^0.9.5",
    "apollo-server": "^3.4.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "faker": "^5.5.3",
    "graphql": "^15.7.1",
    "jest-mock-extended": "^2.0.4",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.3.0",
    "@graphql-codegen/typescript": "^2.4.1",
    "@graphql-codegen/typescript-resolvers": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "cypress": "^9.1.0",
    "eslint": "^8.1.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "prisma": "^3.5.0",
    "ts-jest": "^27.0.7",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.4.4"
  }
}
